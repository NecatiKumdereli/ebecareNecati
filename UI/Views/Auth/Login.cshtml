@model DataTransferObject.User.UserLoginDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>SignIn Cover | CORK - Multipurpose Bootstrap Dashboard Template </title>
    <link rel="icon" type="image/x-icon" href="~/theme/src/assets/img/favicon.ico" />
    <link href="~/theme/modern-light-menu/css/light/loader.css" rel="stylesheet" />
    <link href="~/theme/modern-light-menu/css/dark/loader.css" rel="stylesheet" />
    <script src="~/theme/modern-light-menu/loader.js"></script>
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
    <link href="~/theme/src/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/theme/modern-light-menu/css/light/plugins.css" rel="stylesheet" />
    <link href="~/theme/src/assets/css/light/authentication/auth-cover.css" rel="stylesheet" />

    <link href="~/theme/modern-light-menu/css/dark/plugins.css" rel="stylesheet" />
    <link href="~/theme/src/assets/css/dark/authentication/auth-cover.css" rel="stylesheet" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <style>
        .auth-overlay {
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
            border-radius: inherit;
            background-image: linear-gradient(-225deg, #231557 0%, #ffffff 29%, rgb(255 0 84 / 75%) 100%);
            width: 55%;
        }

        .auth-cover img {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body class="form">

    <!-- BEGIN LOADER -->
    <div id="load_screen">
        <div class="loader">
            <div class="loader-content">
                <div class="spinner-grow align-self-center"></div>
            </div>
        </div>
    </div>
    <!--  END LOADER -->

    <div class="auth-container d-flex">

        <div class="container mx-auto align-self-center">

            <div class="row">

                <div class="col-6 d-lg-flex d-none h-100 my-auto top-0 start-0 text-center justify-content-center flex-column">
                    <div class="auth-cover-bg-image"></div>
                    <div class="auth-overlay"></div>

                    <div class="auth-cover">

                        <div class="position-relative">
                            <img src="~/bera.png" alt="auth-img">
                        </div>

                    </div>

                </div>

                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-8 col-12 d-flex flex-column align-self-center ms-lg-auto me-lg-0 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <form style=" min-width: calc(100% / 4); margin-top: -21%;" asp-controller="Auth" asp-action="Login">
                                <div class="row">
                                    <div class="col-md-12 mb-3">

                                        <h2>Giriş</h2>
                                        <p>Giriş için lütfen kullanıcı adı ve şifrenizi giriniz.</p>
                                        @if (ViewData["message"] != null)
                                        {
                                            <div class="alert alert-danger">
                                                @ViewData["message"]
                                            </div>
                                        }

                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label class="form-label">Email</label>
                                            <input type="texts" class="form-control" asp-for="@Model.UserName" name="Username" placeholder="Kullanıcı Adı">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-4">
                                            <label class="form-label">Şifre</label>
                                            <input type="password" class="form-control" asp-for="@Model.Password" name="Password" placeholder="Şifre">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-4">
                                            <button type="submit" class="btn btn-secondary w-100">SIGN IN</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="~/theme/src/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- END GLOBAL MANDATORY SCRIPTS -->

</body>
</html>