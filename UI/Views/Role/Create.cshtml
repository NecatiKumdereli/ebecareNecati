@{
    ViewData["Title"] = "Rol Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12 layout-spacing">
    <div class="container statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>Rol Ekleme Sayfası</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <div class="card-body" id="app">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Rol Tanımı</label>
                    <div class="col-sm-5">
                        <input class="form-control" name="Name" v-model="role.name" maxlength="32">
                        <span data-valmsg-for="Name" data-valmsg-replace="true"></span>
                    </div>
                </div>
                <br>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">&nbsp;</label>
                    <div class="col-sm-10">
                        <input @@click="addRole()" class="btn btn-warning" value="KAYDET" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
